  <main>
    <section id="projets">

      <projet typeof="schema:Project" resource="#projet1">
        <titre property="schema:name">Battleship Game</titre>
        <categorie property="schema:about">ACADEMIC PROJECT</categorie>
        <technos>
          <techno property="schema:programmingLanguage">C</techno>
          <techno property="schema:programmingLanguage">GTK</techno>
        </technos>
        <image property="schema:image" src="ressources/bataille.png" alt="Battleship game"/>
        <description>
          <point property="schema:description">Developed a battleship game in C with a GTK GUI, playable against an AI or in local multiplayer mode.</point>
          <point property="schema:description">Players place ships and fire on the AI grid, which uses algorithms to target efficiently.</point>
          <point property="schema:description">In local mode, ships are placed randomly to hide their position from opponents.</point>
        </description>
      </projet>

      <projet typeof="schema:Project" resource="#projet2">
        <titre property="schema:name">Mini Train Simulator</titre>
        <categorie property="schema:about">ACADEMIC PROJECT</categorie>
        <technos>
          <techno property="schema:programmingLanguage">HTML</techno>
          <techno property="schema:programmingLanguage">CSS</techno>
          <techno property="schema:programmingLanguage">JavaScript</techno>
        </technos>
        <image property="schema:image" src="ressources/train.png" alt="Train simulator"/>
        <description>
          <point property="schema:description">Created a 2D rail simulator where trains move along a track map.</point>
          <point property="schema:description">Added rules to prevent trains from derailing or reaching invalid cells.</point>
          <point property="schema:description">Users can add trains, edit the track in real time, and observe train behavior.</point>
        </description>
      </projet>

      <projet typeof="schema:Project" resource="#projet3">
        <titre property="schema:name">Personal Portfolio Site</titre>
        <categorie property="schema:about">PERSONAL PROJECT</categorie>
        <technos>
          <techno property="schema:programmingLanguage">HTML</techno>
          <techno property="schema:programmingLanguage">CSS</techno>
          <techno property="schema:programmingLanguage">JavaScript</techno>
        </technos>
        <image property="schema:image" src="ressources/portfolio.png" alt="Portfolio website"/>
        <description>
          <point property="schema:description">Designed and built a personal website to showcase projects and skills.</point>
          <point property="schema:description">Implemented a responsive design for all screen sizes.</point>
          <point property="schema:description">Used JavaScript for interactive features to enhance user experience.</point>
        </description>
      </projet>

      <projet typeof="schema:Project" resource="#projet4">
        <titre property="schema:name">Logistics Center Placement</titre>
        <categorie property="schema:about">ACADEMIC PROJECT</categorie>
        <technos>
          <techno property="schema:programmingLanguage">Operations Research</techno>
          <techno property="schema:programmingLanguage">MILP</techno>
          <techno property="schema:programmingLanguage">Metaheuristics</techno>
        </technos>
        <image property="schema:image" src="ressources/oloc.png" alt="Optimization"/>
        <description>
          <point property="schema:description">Studied a combinatorial optimization problem for placing logistics centers in a country.</point>
          <point property="schema:description">Applied linear and combinatorial optimization techniques.</point>
          <point property="schema:description">Modeled using MILP and implemented greedy and metaheuristic algorithms.</point>
          <point property="schema:description">Compared solutions by quality and runtime to recommend the best approach.</point>
        </description>
      </projet>

